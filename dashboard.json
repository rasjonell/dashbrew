{
  "style": {
    "borderType": "rounded",
    "borderColor": "#ffffff",
    "focusedBorderColor": "#00ff00"
  },
  "layout": {
    "type": "container",
    "direction": "row",
    "children": [
      {
        "type": "container",
        "direction": "column",
        "flex": 1,
        "children": [
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "disk",
              "type": "text",
              "title": "üíæ Long Cat output",
              "data": {
                "source": "script",
                "command": "cat ./dashboard.json"
              }
            }
          },
          {
            "type": "component",
            "flex": 2,
            "component": {
              "id": "processes",
              "type": "list",
              "title": "üìú Processes (Top 5 CPU)",
              "data": {
                "source": "script",
                "command": "./list.sh",
                "refresh_interval": 2
              }
            }
          }
        ]
      },
      {
        "type": "container",
        "direction": "column",
        "flex": 2,
        "children": [
          {
            "type": "component",
            "flex": 1,
            "component": {
              "id": "weather",
              "type": "text",
              "title": "üå¶Ô∏è Weather",
              "data": {
                "source": "api",
                "url": "https://wttr.in/Yerevan?format=3",
                "refresh_interval": 900
              }
            }
          },
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "personal",
              "type": "todo",
              "title": "üìô Personal ToDo List",
              "data": {
                "source": "./personal.txt"
              }
            }
          },
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "todo",
              "type": "todo",
              "title": "üìï Dashbrew ToDo List",
              "data": {
                "source": "./todo.txt"
              }
            }
          }
        ]
      }
    ]
  }
}
