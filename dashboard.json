{
  "style": {
    "borderType": "rounded",
    "borderColor": "#ffffff",
    "focusedBorderColor": "#00ff00"
  },
  "layout": {
    "type": "container",
    "direction": "row",
    "children": [
      {
        "type": "container",
        "direction": "column",
        "flex": 1,
        "children": [
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "chart-api",
              "type": "chart",
              "title": "üìä API Chart",
              "data": {
                "source": "api",
                "url": "http://www.randomnumberapi.com/api/v1.0/random?min=100&max=1000&count=5",
                "json_path": "$",
                "refresh_interval": 1,
                "refresh_mode": "append",
                "caption": "Random API Values(append mode)"
              }
            }
          },
          {
            "type": "component",
            "flex": 2,
            "component": {
              "id": "processes",
              "type": "list",
              "title": "üìú Processes (Top 5 CPU)",
              "data": {
                "source": "script",
                "command": "./list.sh",
                "refresh_interval": 2
              }
            }
          }
        ]
      },
      {
        "type": "container",
        "direction": "column",
        "flex": 2,
        "children": [
          {
            "type": "container",
            "direction": "row",
            "flex": 1,
            "children": [
              {
                "type": "component",
                "flex": 1,
                "component": {
                  "id": "weather",
                  "type": "text",
                  "title": "üå¶Ô∏è Weather",
                  "data": {
                    "source": "api",
                    "url": "https://wttr.in/Yerevan?format=4"
                  }
                }
              },
              {
                "type": "component",
                "flex": 1,
                "component": {
                  "id": "advice",
                  "type": "text",
                  "title": "üí° Advice",
                  "data": {
                    "source": "api",
                    "json_path": "$.slip.advice",
                    "url": "https://api.adviceslip.com/advice"
                  }
                }
              }
            ]
          },
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "chart",
              "type": "chart",
              "title": "üìô Script Chart",
              "data": {
                "source": "script",
                "command": "./random_numbers.sh 10",
                "refresh_interval": 1,
                "refresh_mode": "replace",
                "caption": "Random Script Values(replace mode)"
              }
            }
          },
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "todo",
              "type": "todo",
              "title": "üìï Dashbrew ToDo List",
              "data": {
                "source": "./todo.txt"
              }
            }
          }
        ]
      }
    ]
  }
}
