{
  "style": {
    "border": {
      "type": "thicc",
      "color": "#888888",
      "focusedColor": "#444444"
    },
    "borderType": "thicc"
  },
  "layout": {
    "type": "container",
    "direction": "row",
    "children": [
      {
        "type": "container",
        "direction": "column",
        "flex": 1,
        "children": [
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "dash-todo",
              "type": "todo",
              "title": "üìô Dashbrew ToDo",
              "data": {
                "source": "./todo.txt"
              }
            }
          },
          {
            "type": "component",
            "flex": 2,
            "component": {
              "id": "table",
              "type": "table",
              "title": "üìà Posts Table",
              "data": {
                "source": "api",
                "url": "https://jsonplaceholder.typicode.com/todos",
                "columns": [
                  {
                    "flex": 1,
                    "label": "ID",
                    "field": "userId"
                  },
                  {
                    "flex": 4,
                    "label": "Title",
                    "field": "title"
                  },
                  {
                    "flex": 2,
                    "label": "Is Done?",
                    "field": "completed"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "type": "container",
        "direction": "column",
        "flex": 2,
        "children": [
          {
            "type": "container",
            "direction": "row",
            "flex": 1,
            "children": [
              {
                "type": "component",
                "flex": 1,
                "component": {
                  "id": "weather",
                  "type": "text",
                  "title": "üå¶Ô∏è Weather",
                  "data": {
                    "source": "api",
                    "url": "https://wttr.in/Yerevan?format=4"
                  }
                }
              },
              {
                "type": "component",
                "flex": 1,
                "component": {
                  "id": "advice",
                  "type": "text",
                  "title": "üí° Advice",
                  "data": {
                    "source": "api",
                    "json_path": "$.slip.advice",
                    "url": "https://api.adviceslip.com/advice",
                    "refresh_interval": 10
                  }
                }
              }
            ]
          },
          {
            "type": "component",
            "flex": 3,
            "component": {
              "id": "chart",
              "type": "chart",
              "title": "üìô Script Chart",
              "data": {
                "source": "script",
                "command": "./random_numbers.sh 10",
                "refresh_interval": 1,
                "refresh_mode": "append",
                "caption": "Random Script Values(append mode)"
              }
            }
          },
          {
            "type": "component",
            "flex": 2,
            "component": {
              "id": "histogram",
              "type": "histogram",
              "title": "üìä Data Distribution",
              "data": {
                "source": "script",
                "command": "./histogram_data.sh",
                "refresh_interval": 5,
                "caption": "Distribution of fruites"
              }
            }
          }
        ]
      }
    ]
  }
}
